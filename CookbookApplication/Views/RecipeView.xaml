<Window x:Class="CookbookApplication.Views.RecipeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookbookApplication.Views"
        mc:Ignorable="d"
        Title="RecipeView" MinHeight="530" MinWidth="915" WindowStartupLocation="CenterScreen" Height="530" Width="915">
    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Command="{Binding OpenJsonFileCommand}"/>
                <MenuItem Header="_Save" Command="{Binding SaveJsonFileCommand}"/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Margin="10,0,0,0">
                <TextBlock Text="Recipes" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,0">
                    <TextBox Width="200" Height="25" VerticalAlignment="Top" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Search" Width="50" Height="25" VerticalAlignment="Top" Command="{Binding SearchParameterCommand}"/>
                </StackPanel>
                <ListBox ItemsSource="{Binding FilteredRecipes}" SelectedItem="{Binding SelectedRecipe}" d:ItemsSource="{d:SampleData ItemCount=3}" Height="350"  Width="250" FontSize="15">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock FontSize="18" Text="{Binding Name}"/>
                                <TextBlock Text="{Binding Type}"/>
                                <TextBlock Text="{Binding Cuisine}"/>
                                <Image Source="{Binding ImagePath}" HorizontalAlignment="Left" Height="50" Width="50" Stretch="Fill"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            <Grid HorizontalAlignment="Stretch" Margin="270,0,0,0" Width="620">

                <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                    <TextBlock Text="Ingredients" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <ListBox ItemsSource="{Binding SelectedRecipe.Ingredients}" d:ItemsSource="{d:SampleData ItemCount=5}" BorderBrush="{x:Null}" Height="376" Width="250" FontSize="15" Margin="0,5,0,0" Background="#FFDAD4D3">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Width="215" VerticalAlignment="Stretch">
                                    <CheckBox VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" Margin="5,0,20,0"/>
                                    <TextBlock Text="{Binding Quantity}" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Margin="260,0,0,0">
                    <TextBlock Text="Instructions" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <ListBox ItemsSource="{Binding SelectedRecipe.Instructions}" d:ItemsSource="{d:SampleData ItemCount=5}" BorderBrush="{x:Null}" Height="376" Width="360" FontSize="15" Margin="0,5,0,0" Background="#FFDAD4D3">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" Margin="5,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

            </Grid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="Add Recipe" Command="{Binding AddRecipeCommand}" Margin="5"/>
                <Button Content="Remove Recipe" Command="{Binding RemoveRecipeCommand}" CommandParameter="{Binding SelectedRecipe}" Margin="5"/>
                <Button Content="Edit Recipe" Command="{Binding EditRecipeCommand}" CommandParameter="{Binding SelectedRecipe}" Margin="5"/>
                <Button Content="Export Recipe" Command="{Binding ExportRecipeCommand}" CommandParameter="{Binding SelectedRecipe}" Margin="5"/>
            </StackPanel>
        </Grid>

    </DockPanel>
</Window>
