<Window x:Class="CookbookApplication.Views.RecipeEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookbookApplication.Views"
        mc:Ignorable="d"
        Title="RecipeEditView" WindowStartupLocation="CenterScreen" Height="420" Width="820" MinHeight="420" MinWidth="820" ResizeMode="CanMinimize">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Margin" Value="10,0,10,0"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10,0,10,0"></Setter>
        </Style>
    </Window.Resources>
    <Grid>

        <StackPanel HorizontalAlignment="Left" Margin="0,10,0,10" MinWidth="150" Orientation="Vertical">

            <TextBlock Text="Name" FontWeight="DemiBold"/>
            <TextBox Text="{Binding SelectedRecipe.Name, UpdateSourceTrigger=PropertyChanged}" FontSize="15"/>
            <TextBlock Text="Type" FontWeight="DemiBold" Margin="10,10,10,0"/>
            <ComboBox Width="130" ItemsSource="{Binding RecipeTypeNames}" SelectedItem="{Binding SelectedRecipe.Type}" FontSize="15" MaxDropDownHeight="100" IsTextSearchEnabled="True" />
            <TextBlock Text="Cuisine" FontWeight="DemiBold" Margin="10,10,10,0"/>
            <ComboBox Width="130" ItemsSource="{Binding RecipeCuisineNames}" SelectedItem="{Binding SelectedRecipe.Cuisine}" FontSize="15" MaxDropDownHeight="100" IsTextSearchEnabled="True"/>
            <Image Source="{Binding SelectedRecipe.ImagePath}" Height="125" Width="125" Stretch="Fill" Margin="0,30,0,0"/>
            <Button Content="Edit Image" Command="{Binding EditImageCommand}" Width="100" Margin="0,10,0,0"/>

        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Margin="150,10,0,10" Orientation="Vertical">

            <StackPanel Orientation="Vertical" MinWidth="280" Height="330" Background="#FFDAD4D3">

                <TextBlock TextWrapping="Wrap" Text="Ingredients" HorizontalAlignment="Center" Width="170" TextAlignment="Center"/>

                <StackPanel Orientation="Horizontal">

                    <DataGrid x:Name="IngredientsDataGrid" ItemsSource="{Binding SelectedRecipe.Ingredients}" d:ItemsSource="{d:SampleData ItemCount=14}" Margin="5,0" FontSize="15" AutoGenerateColumns="False" Width="270" MaxHeight="310" HeadersVisibility="None" CanUserAddRows="False">
                        <DataGrid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFEDC57D"/>
                                <GradientStop Color="#FFF78F5E" Offset="1"/>
                            </LinearGradientBrush>
                        </DataGrid.Background>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>

            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="Add Ingredient" Command="{Binding AddIngredientCommand}" Width="100" Margin="5"/>
                <Button Content="Delete Ingredient" Command="{Binding RemoveIngredientCommand}" CommandParameter="{Binding SelectedItem, ElementName=IngredientsDataGrid}" Width="100" Margin="5"/>
            </StackPanel>

        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Margin="0,10" Orientation="Vertical">

            <StackPanel Orientation="Vertical" Background="#FFDAD4D3" Width="370" Height="330">

                <TextBlock TextWrapping="Wrap" Text="Instructions" HorizontalAlignment="Center" Width="170" TextAlignment="Center"/>

                <DataGrid x:Name="InstructionsDataGrid" ItemsSource="{Binding SelectedRecipe.Instructions}" d:ItemsSource="{d:SampleData ItemCount=14}" Margin="5,0" FontSize="15" AutoGenerateColumns="False" HeadersVisibility="None" CanUserAddRows="False" Width="360" MaxHeight="310">
                    <DataGrid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFEDC57D"/>
                            <GradientStop Color="#FFF78F5E" Offset="1"/>
                        </LinearGradientBrush>
                    </DataGrid.Background>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Instruction" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="Add Instruction" Command="{Binding AddInstructionCommand}" Width="100" Margin="5"/>
                <Button Content="Delete Instruction" Command="{Binding RemoveInstructionCommand}" CommandParameter="{Binding SelectedItem, ElementName=InstructionsDataGrid}" Width="100" Margin="5"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
